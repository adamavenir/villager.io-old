extends layout

block body
  body
    include in/header

    h1 Pending
    ul.pending
      for person in people
        li(class= person.approved)
          a(href= '/people/' + person.slug)
            img.grav(src= person.avatar)
          h3= person.fullName
          p
            if !person.approved
              | Pending
            if person.approved
              | âˆš
            if person.moderator
              | M
            if person.admin
              | A
          p.moderate
            a(href="/people/approve/" + person.key) Approve
            a(href="/people/moderator/" + person.key) Moderator
            a(href="/people/delete/" + person.key + '/' + person.slug) Delete
      for place in places
        li
          a(href= '/places/' + place.slug)
            img.grav(src= place.image)
          h3= place.name
          p.moderate
            a(href="/places/approve/" + place.key) Approve
            a(href="/places/delete/" + place.key + '/' + place.slug) Delete
      for group in groups
        li
          a(href= '/groups/' + group.slug)
            img.grav(src= group.image)
          h3= group.name
          p.moderate
            a(href="/groups/approve/" + group.key) Approve
            a(href="/groups/delete/" + group.key + '/' + group.slug) Delete

    include in/footer