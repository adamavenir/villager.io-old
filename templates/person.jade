extends layout

block body
  body
    include in/header
    div.person
      img.grav(src= person.avatar)
      h2= person.name
       h3
        a(href= 'http://twitter.com/' + person.twitter) @#{person.twitter}
      p
        if !person.approved
          | Pending
        if person.approved
          | âˆš
        if person.moderator
          | M
        if person.admin
          | A
      p= person.bio
      if moderator
        a.delete(href= '/people/delete/' + person.key + '/' + person.name) Delete this person
        if !person.moderator
          a.moderator(href= '/people/moderator/' + person.key) Make moderator

    include in/footer
