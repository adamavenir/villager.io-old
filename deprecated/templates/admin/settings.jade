extends ../layout

block body
  
  include ../in/header

  h1 Categories

  h2 Place Categories
  each cat in placeCategories[0]
      div.interest
        img.grav(src= cat.image)
        h4= cat.name
        hp= cat.description
        a(href="/tinker/delete/place-category/" + cat.key) Delete
        br
        a.edit(href="/tinker/edit/place-category/" + cat.key) Edit

  form(method="POST", action="/tinker/add-place-category")
    p Add new place category
    label(for="name") Name
    input(name="name")
    label(for="description") Description
    input(name="description")
    label(for="image") Image (optional)
    input(name="image")
    button.small(type="submit") Add category

