extends ../layout

block body
  body
    include ../in/header
    include headerEditItem

    form(method="POST", action="/places/update/" + item.key)
      fieldset
        legend Edit #{item.name}
        .form-element
          label(for="type") Type of place:
          select.form-input(name="type")
            if item.type
              option(value= item.type) #{item.type.name}
            else
              option(value="") -- Select a Category --
            each cat in categories
              if item.type.key != cat.key
                option(value=cat.key) #{cat.name}
        .form-element
          label(for="name") Place name
          input.form-input(name="name", type="text", placeholder="Name of the place", value= item.name)
        .form-element
          label(for="address") Address
          input.form-input(name="address", type="text", placeholder="112 Hundred Acre Wood", value= item.address)            
        .form-element
          label(for="city") City
          input.form-input(name="city", type="text", placeholder="West Richlascowickton City", value= item.city)            
        .form-element
          label(for="website") Website
          input.form-input(name="website", type="text", placeholder="http://placewebsite.com", value= item.website)
        .form-element
          label(for="image") Link to image
          input.form-input(name="image", type="text", placeholder="link to an image", value= item.image)
        .form-element
          label(for="about") Description
          textarea.form-input(name="about", type="text", maxlength="160", placeholder="Describe this place (160 characters max)") #{item.about}
        button.button.button-primary(name="submit", type="submit") Update place

    include ../in/footer