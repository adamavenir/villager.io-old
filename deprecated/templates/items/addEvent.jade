extends ../layout

block body
  body
    include ../in/header

    form(method="POST", action="/events/add")
      fieldset
        legend Add an event
        .form-element
          label(for="type") Type of event:
          select.form-input(name="type")
            option(value="") -- Select a Category --
            each cat in categories
              option(value=cat.key) #{cat.name}
        .form-element
          label(for="name") Event title
          input.form-input(name="name", type="text", placeholder="Name of the place")
        .form-element
          label(for="about") Description
          textarea.form-input(name="about", type="text", maxlength="160", placeholder="Describe this place (160 characters max)")
        .form-element
          label(for="date") Date (required)
          input.form-input(name="date", type="text", placeholder='“June 5, 2015” “next thursday” “tomorrow” “april 10”')
        .form-element
          label(for="time") Time (optional)
          input.form-input(name="time", type="text", placeholder="5:20 p.m.")
        .form-element
          label(for="phone") Contact phone number
          input.form-input(name="phone", type="text", placeholder="(509) 555-1212")
        .form-element
          label(for="email") Contact email address
          input.form-input(name="email", type="text", placeholder="you@reaweso.me")
        .form-element
          label(for="website") Website
          input.form-input(name="website", type="text", placeholder="http://placewebsite.com")
        .form-element
          label(for="image") Link to image
          input.form-input(name="image", type="text", placeholder="link to an image")
        
        button.button.button-primary(name="submit", type="submit") Add this event

    include ../in/footer