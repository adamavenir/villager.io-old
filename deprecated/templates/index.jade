extends layout

block body
  body
    include in/header

    .title-bar
      h1 Welcome
      blockquote.blockquote-large
        p “Cities have the capability of providing something for everybody, only because, and only when, they are created by everybody.”
        footer Jane Jacobs

    if user
      ul.history
        for i in log
          li(class='edit' + i.editType)
            a(href= '/people/' + i.editorSlug)
              img(src= i.editorAvatar)
              | #{i.editorName}
            span #{i.editType} #{i.objType}
            a(href= '/people/' + i.editedSlug)
              span= i.editedName

    include in/footer